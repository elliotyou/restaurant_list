<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">修改餐廳 <i class="fas fa-utensils"></i></h5>
          <hr>
          <form method="POST" action="/restaurants/{{restaurant._id}}?_method=PUT">
            <div class="form-group form-row">
              <label for="name" class="col-md-4 col-form-label">
                餐廳名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" value={{restaurant.name}} required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="name_en" class="col-md-4 col-form-label">
                English Name
              </label>
              <div class="col-md-8">
                <input type="text" name="name_en" class="form-control" value="{{restaurant.name_en}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">
                餐廳類別
              </label>
              <div class="col-md-8">
                <select class="form-control" name="category">
                  <option selected disabled>選擇類別</option>
                  <option value="咖啡">咖啡</option>
                  <option value="酒吧">酒吧</option>
                  <option value="台式">台式</option>
                  <option value="義式">義式</option>
                  <option value="美式">美式</option>
                  <option value="中東">中東</option>
                  <option value="韓式">韓式</option>
                  <option value="中式">中式</option>
                  <option value="港式">港式</option>
                  <option value="泰式">泰式</option>
                </select>
              </div>
              {{!-- <div class="col-md-8">
                <input type="text" name="category" class="form-control" value="restaurant.category">
              </div> --}}
            </div>

            <div class="form-group form-row">
              <label for="image" class="col-md-4 col-form-label">
                餐廳圖片網址
              </label>
              <div class="col-md-8">
                <input type="text" name="image" class="form-control" value="{{restaurant.image}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="location" class="col-md-4 col-form-label">
                餐廳地址
              </label>
              <div class="col-md-8">
                <input type="text" name="location" class="form-control" value="{{restaurant.location}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="phone" class="col-md-4 col-form-label">
                餐廳電話
              </label>
              <div class="col-md-8">
                <input type="text" name="phone" class="form-control" value="{{restaurant.phone}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="google_map" class="col-md-4 col-form-label">
                Google Map
              </label>
              <div class="col-md-8">
                <input type="text" name="google_map" class="form-control" value="{{restaurant.google_map}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rating" class="col-md-4 col-form-label">
                餐廳評價
              </label>
              <div class="col-md-8">
                <input type="number" step="0.1" max="5" min="1" name="rating" class="form-control"
                  value="{{restaurant.rating}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="description" class="col-md-4 col-form-label">
                餐廳描述
              </label>
              <div class="col-md-8">
                <textarea name="description" class="form-control" rows="5">{{restaurant.description}}</textarea>
              </div>
            </div>
            <div class="form-group form-row d-flex justify-content-end">
              <button class="btn btn-major mr-2" type="submit">儲存</button>
              <a href="/">
                <button class="btn btn-major" type="button">返回</button>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>